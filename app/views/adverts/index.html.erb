<section id="main-content">
  <section class="wrapper">
  <!--<p id="notice"><%= notice %></p>-->
    <br>

    <div class="row mt">
      <div class="col-md-12">
        <div class="content-panel">
          <table class="table table-striped table-advance table-hover">
            <h4><i class="fa fa-angle-right"></i> Mis Anuncios</h4>
            <hr>
            <thead>
            <tr>
              <th><i class="fa fa-bullhorn"></i> Nombre</th>
              <th class="hidden-phone"><i class="fa fa-question-circle"></i> Descripci√≥n</th>
              <th><i class="fa fa-bookmark"></i> Tipo de Anuncio</th>
              <th></th>
            </tr>
            </thead>
            <tbody>

            <!--< #@adverts.each do |advert| >-->
            <% current_user.adverts.each do |advert| %>
            <tr>
              <td><%= link_to advert.name, advert %></td>
              <td class="hidden-phone"><%= advert.description %></td>
              <td><%= advert.ad_type %></td>
              <td>
                <%= link_to advert, class: "btn btn-success btn-xs" do %>
                    <i class="fa fa-eye"></i>
                <% end %>
                <%= link_to edit_advert_path(advert), class: "btn btn-primary btn-xs" do %>
                    <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to advert, method: :delete, data: { confirm: 'Seguro desea eliminar?' }, class: "btn btn-danger btn-xs" do %>
                    <i class="fa fa-trash-o"></i>
                <% end %>

              </td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /content-panel -->
      </div><!-- /col-md-12 -->
    </div><!-- /row -->




  </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->