
<div id="login-page">

    <div class="container">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { class: "form-login" } ) do |f| %>
            <!--<%= devise_error_messages! %>-->

            <h2 class="form-login-heading">Nuevo Usuario</h2>

            <div class="login-wrap">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control"%>
                <!--<input type="text" class="form-control" placeholder="User ID" autofocus>-->
                <br>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "form-control"%>
                <% if @validatable %>
                  <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
                <% end %><br />

                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar Contraseña", class: "form-control"%>

                <br>


                <%= f.button "Registrarse" , class:"btn btn-theme btn-block" %>
                              <br>
                              <%= render "devise/shared/links" %>
            </div>

      <% end %>

    </div>

</div>

<script>
  $.backstretch("<%= asset_path('fondo.jpg') %>", {speed: 500});
</script>