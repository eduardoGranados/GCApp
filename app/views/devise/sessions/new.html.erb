<div id="login-page">

  <div class="container">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: "form-login" } ) do |f| %>
    <!--<form class="form-login" action="index.html">-->
    <h2 class="form-login-heading">Inicia Sesión</h2>
    <!--<h2 class="form-login-heading"><p class="centered"><%= image_tag("logo.png", width: '60',  class: "img-circle") %></p></h2>-->
    <div class="login-wrap">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control"%>
        <!--<input type="text" class="form-control" placeholder="User ID" autofocus>-->
        <br>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "form-control"%>
                  <!--<input type="password" class="form-control" placeholder="Password">-->
        <label class="checkbox">
        <span class="pull-right">
            <a data-toggle="modal" href="login.html#myModal"> ¿Olvidaste tu contraseña?</a>

        </span>
        </label>
        <%= f.button "Log in" , class:"btn btn-theme btn-block" %>

      <!--<%= button_tag "Log in", data: { class: "btn btn-theme btn-block" }%>-->

                              <!--<input class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i> SIGN IN</input>-->
        <hr>

                              <!--<div class="login-social-link centered">-->
                              <!--<p>or you can sign in via your social network</p>-->
                              <!--<button class="btn btn-facebook" type="submit"><i class="fa fa-facebook"></i> Facebook</button>-->
                              <!--<button class="btn btn-twitter" type="submit"><i class="fa fa-twitter"></i> Twitter</button>-->
                              <!--</div>-->
        <div class="registration">
            ¿No tienes una cuenta?<br/>
            <%= link_to "Regístrate", new_registration_path(resource_name) %><br />

        </div>

    </div>

    <!-- Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Forgot Password ?</h4>
        </div>
        <div class="modal-body">
          <p>Enter your e-mail address below to reset your password.</p>
          <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

        </div>
        <div class="modal-footer">
          <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
          <button class="btn btn-theme" type="button">Submit</button>
        </div>
      </div>
    </div>
    </div>
    <!-- modal -->

  <% end %>

    </div>

</div>

<script>
  $.backstretch("<%= asset_path('fondo.jpg') %>", {speed: 500});
</script>



