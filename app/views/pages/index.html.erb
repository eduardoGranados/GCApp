<script type="application/javascript">

    var index_ready = function() {

        var markers = [];
        var allPlaces;
        var mapInstance;
        var userIcon = {
            path: 'M12 4C9.79 4 8 5.79 8 8s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 10c-2.67 0-8 1.34-8 4v2h16v-2c0-2.67-5.33-4-8-4z',
            fillColor: 'darkslategrey',
            //          strokeColor: '#000000',
            fillOpacity: 1
        };
        var jobIcon = {
            url: "<%= asset_path('empleos.svg') %>",
            fillColor: 'darkslategrey',
            fillOpacity: 1
        };
        var commerceIcon = {
            path: 'M20 4H4v2h16V4zm1 10v-2l-1-5H4l-1 5v2h1v6h10v-6h4v6h2v-6h1zm-9 4H6v-4h6v4z',
            fillColor: 'darkslategrey',
            strokeColor: 'darkslategrey',
            fillOpacity: 1
        };
        var propertyIcon = {
            url: "<%= asset_path('inmuebles.svg') %>",
//            path: 'M220.5,111.745c0-6.468-1.326-10.245-6.206-10.245H45.662c-4.879,0-10.162,3.777-10.162,10.245v102.48c0,6.468,5.282,13.274,10.162,13.274h168.632c4.88,0,6.206-6.807,6.206-13.274V111.745z',
            fillColor: 'darkslategrey',
//            size: new google.maps.Size(60, 50),
            //          strokeColor: '#000000',
//            origin: new google.maps.Point(0, 0),
//            anchor: new google.maps.Point(25, 25),
            fillOpacity: 1
        };
        function addMarker(lat,long,type){
            var location = new google.maps.LatLng(lat, long);

            var marker = new google.maps.Marker({
                position: location
            });

            if(type=='user'){
                marker.setIcon(userIcon);
            }else if(type=='property'){
                marker.setIcon(propertyIcon);
            }else if(type=='commerce'){
                marker.setIcon(commerceIcon);
            }else if(type=='job'){
                marker.setIcon(jobIcon);
            }

            marker.setMap(map);
            markers.push(marker);
        }


        current_pos = new google.maps.LatLng('37.77733837166234', '-122.4471003970337');
        var mapOptions = {
//            disableDefaultUI: true,
//            zoomControl: false,
            zoomControlOptions: {
                style: google.maps.ZoomControlStyle.SMALL,
                position: google.maps.ControlPosition.LEFT_CENTER
            },
            center: current_pos,
            zoom: 13,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var styles = [
            {
                featureType: "poi",
                stylers: [
                    { visibility: "off" }
                ]
            }];
        var styledMap = new google.maps.StyledMapType(styles,{name: "Styled Map"});
        var map =new google.maps.Map(document.getElementById("main-map"), mapOptions);

        //set map styles
        map.mapTypes.set('map_style', styledMap);
        map.setMapTypeId('map_style');

        //on map loaded event
        var initEvent = google.maps.event.addListener(map, 'tilesloaded', function(){
            google.maps.event.removeListener(initEvent);
            $("#main-map").css('opacity','1');
            <% Advert.all.each do |advert| %>
                addMarker("<%= advert.latitude %>","<%= advert.longitude %>","<%= advert.ad_type %>");

            <% end %>
        });
    };


    $(document).ready(index_ready);
    $(document).on('page:load', index_ready);
</script>